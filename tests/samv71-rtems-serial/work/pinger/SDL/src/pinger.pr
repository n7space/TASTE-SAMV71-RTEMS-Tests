/* CIF PROCESS (250, 150), (150, 75) */
/* CIF Keep Specific Geode _REQSERVER_ 'https://gitlab.esa.int/taste/demo' */
process Pinger;
    /* CIF Keep Specific Geode Partition 'default' */
    /* CIF TEXT (0, 229), (172, 140) */
    dcl param MyInteger := 0;
    dcl testparam MyInteger;
    /* CIF ENDTEXT */
    /* CIF START (190, 0), (70, 35) */
    START;
        /* CIF NEXTSTATE (190, 50), (70, 35) */
        NEXTSTATE Wait;
    /* CIF state (439, 223), (70, 35) */
    /* CIF Keep Specific Geode Partition 'default' */
    state Wait;
        /* CIF input (439, 278), (70, 35) */
        input trigger;
            /* CIF output (426, 333), (95, 35) */
            output ping(param);
            /* CIF PROCEDURECALL (382, 388), (184, 35) */
            call writeln('Sent ping ', param);
            /* CIF decision (433, 443), (81, 50) */
            decision param = 9;
                /* CIF ANSWER (363, 513), (70, 23) */
                (true):
                    /* CIF task (356, 556), (84, 35) */
                    task param := 0;
                /* CIF ANSWER (484, 513), (70, 23) */
                (false):
                    /* CIF task (451, 556), (135, 35) */
                    task param := param + 1;
            enddecision;
            /* CIF NEXTSTATE (439, 607), (70, 35) */
            NEXTSTATE Wait;
    endstate;
    /* CIF state (884, 290), (70, 35) */
    /* CIF Keep Specific Geode Partition 'default' */
    state Wait;
        /* CIF input (857, 345), (123, 35) */
        input pong(testparam);
            /* CIF PROCEDURECALL (815, 400), (208, 35) */
            call writeln('Got pong ', testparam);
            /* CIF NEXTSTATE (884, 455), (70, 35) */
            NEXTSTATE Wait;
    endstate;
endprocess Pinger;